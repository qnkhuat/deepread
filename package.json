{
  "name": "deep-read",
  "author": "qn.khuat@gmail.com",
  "version": "1.0.0",
  "description": "PDF Reader and Analysis Tool",
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dev:electron": "concurrently \"cd frontend && npm run dev\" \"cd backend && npm start\" \"electron .\"",
    "dev:web": "concurrently \"cd frontend && npm run dev\" \"cd backend && npm run dev\"",
    "build": "cd frontend && npm run build && cd ../backend && npm install --production && cd .. && electron-builder",
    "package": "electron-builder"
  },
  "build": {
    "appId": "com.deepread.app",
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "frontend/dist/**/*",
      "frontend/public/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/*",
          "!.env",
          "!.env.example"
        ]
      }
    ],
    "mac": {
      "icon": "./frontend/public/icon/macos/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "./frontend/public/icon/win/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "./frontend/public/icon/png/1024x1024.png",
      "target": [
        "AppImage"
      ]
    }
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^34.2.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "portscanner": "^2.2.0"
  }
}
